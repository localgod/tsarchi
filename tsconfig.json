{
  "compilerOptions": {
    /* Language */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node"],

    /* Declarations */
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false, 

    /* Output & Interop */
    "importHelpers": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleDetection": "force",

    /* Type safety */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    /* Build speed */
    "skipLibCheck": true
  },
  "include": ["src/**/*.mts"],
  "exclude": ["dist", "node_modules", "**/*.spec.mts", "**/*.test.mts"]
}
